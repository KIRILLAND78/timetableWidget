<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.chuvsu-timetable" path="/org/gnome/shell/extensions/chuvsu-timetable/">

    <key name="backend-url" type="s">
      <default>'http://localhost:5000'</default>
      <summary>Backend URL</summary>
      <description>URL адрес API бэкенда</description>
    </key>

    <key name="group" type="i">
      <default>0</default>
      <summary>Subgroup</summary>
      <description>Номер подгруппы (0 = все подгруппы)</description>
    </key>

    <key name="update-interval" type="i">
      <default>300</default>
      <summary>Update interval</summary>
      <description>Интервал обновления расписания (в секундах)</description>
    </key>

    <key name="show-in-panel" type="b">
      <default>true</default>
      <summary>Show in panel</summary>
      <description>Показывать индикатор на панели</description>
    </key>

  </schema>
</schemalist>
